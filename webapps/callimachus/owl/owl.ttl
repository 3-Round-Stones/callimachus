@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix ontology:</ontology/>.
@prefix class:</class/>.
@prefix :<#>.

</ontology> a calli:Alias;
	calli:aliasOf <ontology-list.xhtml?construct>.

<Ontology> a calli:Creatable, owl:Class;
	rdfs:subClassOf owl:Ontology, calli:Viewable, calli:Editable;
	calli:icon <ontology.png>;
	calli:view <ontology.xhtml>;
	calli:edit <ontology-edit.xhtml>;
	calli:create <ontology-create.xhtml>;
	calli:withNamespace </ontology/>;
	calli:editor </group/admin>.

# Note instances of <Class> are creatable and <Class> itself is also creatable
<Class> a calli:Creatable, owl:Class;
	rdfs:subClassOf owl:Class, calli:Creatable, calli:Viewable, calli:Editable;
	calli:icon <class.png>;
	calli:view <class.xhtml>;
	calli:edit <class-edit.xhtml>;
	calli:create <class-create.xhtml>;
	calli:withNamespace </class/>;
	calli:editor </group/admin>.

:PostClassCreate owl:intersectionOf (</callimachus/operations/create.ttl#PostCreate>
		[owl:onProperty msg:target; owl:hasValue <Class>]);
	msg:imports <java:org.openrdf.sail.auditing.vocabulary.Audit>;
	msg:imports <java:org.openrdf.model.vocabulary.RDF>;
	msg:script """
		var con = this.objectConnection;
		var vf = con.getValueFactory();
		con.add(Audit.CURRENT_TRX, RDF.TYPE, vf.createURI("http://callimachusproject.org/rdf/2009/framework#SchemaGraph"), []);
		return proceed();
	""".

:PostClassEdit owl:intersectionOf (</callimachus/operations/edit.ttl#PostEdit>
		[owl:onProperty msg:target; owl:allValuesFrom <Class>]);
	msg:imports <java:org.openrdf.sail.auditing.vocabulary.Audit>;
	msg:imports <java:org.openrdf.model.vocabulary.RDF>;
	msg:script """
		var con = this.objectConnection;
		var vf = con.getValueFactory();
		con.add(Audit.CURRENT_TRX, RDF.TYPE, vf.createURI("http://callimachusproject.org/rdf/2009/framework#SchemaGraph"), []);
		return proceed();
	""".

:ListMembers rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom <Class>];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:method "GET";
	msg:query "members";
	msg:header "cache-control:no-store";
	msg:imports <class-members.xhtml>;
	msg:script """
		return class_members_xhtml.calliConstructHTML(this);
	""".

<Template> rdfs:subClassOf calli:Template, calli:Copyable, calli:Viewable, calli:Editable;
	calli:icon <template.png>;
	calli:view <template.xhtml>;
	calli:edit <template-edit.xhtml>;
	calli:copy <template-copy.xhtml>;
	calli:withNamespace </template/>.

<sample-view.xhtml> a <Template>;
	calli:editor </group/admin>.

<sample-edit.xhtml> a <Template>;
	calli:editor </group/admin>.

<sample-create.xhtml> a <Template>;
	calli:editor </group/admin>.

:PostTemplateCopy owl:intersectionOf (</callimachus/operations/copy.ttl#PostCopy>
		[owl:onProperty msg:target; owl:allValuesFrom <Template>]);
	msg:script """
		var created = proceed();
		this.objectConnection.commit();
		created.PutTemplate(new java.net.URL(this.toString()).openStream());
		return created;
	""".

:local a calli:LocalRealm;
	calli:domain </template/>.

:PutTemplate rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom <Template>];
	rdfs:subClassOf [owl:onProperty msg:objectSet; owl:allValuesFrom owl:Nothing];
	msg:method "PUT" ;
	msg:realm </accounts>, :local ;
	msg:imports <java:org.openrdf.http.object.HTTPObjectServer>;
	msg:script """
		this.objectConnection.addDesignation(this, "urn:mimetype:application/xhtml+xml");
		var out = this.openOutputStream() ;
		var buf = java.lang.reflect.Array.newInstance(java.lang.Byte.TYPE, 1024);
		var read;
		try {
			while ((read = templateStream.read(buf)) >= 0) {
				out.write(buf, 0, read);
			}
		} finally {
			out.close();
		}
		HTTPObjectServer.resetAllCache();
	""".

:templateStream a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain :PutTemplate ;
	rdfs:range <java:java.io.InputStream> ;
	msg:type "application/xhtml+xml" .

