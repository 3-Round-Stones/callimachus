@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

calli:describe rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:objectResponse;
		owl:maxCardinality "1"^^xsd:nonNegativeInteger];
	http:title "RDF Describe";
	http:rel "describedby";
	http:operation "describe";
	http:type "application/rdf+xml;q=0.4", "text/turtle;q=0.5";
	http:transform :describe-xsl;
	obj:script """
		if (objectConnection.hasStatement(resource, null, null, []))
			return this;
		return null;
	""".

:describe-xsl rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xml;q=0.5";
	http:transform <../layout.ttl#template-xsl>;
	obj:xslt <describe.xsl>.

:describe-xsl-xml a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain :describe-xsl;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/xml".

