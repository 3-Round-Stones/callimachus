@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix audit:<http://www.openrdf.org/rdf/2009/auditing#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

:GetCopyPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom <java:java.io.InputStream>];
	msg:method "GET";
	msg:query "copy";
	msg:type "application/xhtml+xml";
	msg:transform </callimachus/layout.ttl#TransformXhtml>;
	msg:header "cache-control:no-cache";
	msg:script """
		return this.FindCopyTemplate().calliConstruct(this, 'copy');
	""".

:PostCopy rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty msg:objectSet; owl:maxCardinality "1"^^xsd:nonNegativeInteger];
	msg:method "POST";
	msg:query "copy";
	msg:expect "201-created";
	msg:type "text/uri-list";
	msg:imports calli:Copyable;
	msg:script """
		var template = this.FindCopyTemplate();
		var copy = template.calliCopyResource(this, input, this.FindCopyNamespaces());
		if (this.calliCurators.size()) {
			copy.calliMaintainers.addAll(this.calliCurators);
			if (copy instanceof Copyable) {
				copy.calliCurators.addAll(this.calliCurators);
			}
		} else {
			copy.calliMaintainers.addAll(this.FindScribe(copy));
		}
		return copy;
	""".

:input a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain :PostCopy;
	rdfs:range <java:java.io.InputStream>;
	msg:type "application/rdf+xml".

:FindCopyTemplate rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom calli:Template];
	msg:imports calli:Template;
	msg:imports <java:org.callimachusproject.annotations.copy>;
	msg:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	msg:script """
		function findAnnotatedClass(klass, ann) {
			if (klass.isAnnotationPresent(ann)) {
				return klass;
			}
			var result;
			if (klass.getSuperclass()) {
				result = findAnnotatedClass(klass.getSuperclass(), ann);
			}
			var interfaces = klass.getInterfaces();
			for (var i = interfaces.length; i--;) {
				var face = findAnnotatedClass(interfaces[i], ann);
				if (face) {
					if (!result || result.isAssignableFrom(face)) {
						result = face;
					} else if (!face.isAssignableFrom(result)) {
						throw new InternalServerError("Conflicting templates for "
							+ result.simpleName +  " and " + face.simpleName);
					}
				}
			}
			return result;
		}
		var annotated = findAnnotatedClass(this.getClass(), copy);
		if (annotated) {
			var uri = annotated.getAnnotation(copy).value();
			if (uri.length != 1)
				throw new InternalServerError("Multiple templates for " + annotated.simpleName);
			var template = this.objectConnection.getObject(Template, uri[0]);
			if (template instanceof Template)
				return template;
			throw new InternalServerError("Missing template");
		}
		throw new InternalServerError("No template");
	""".

:FindCopyNamespaces rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Copyable];
	msg:sparql  """
		SELECT DISTINCT ?namespace
		WHERE { $this a [calli:withNamespace ?namespace] }
	""".

# find the user that created $of if it does not have a conservator
:FindScribe rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Copyable];
	msg:sparql  """
		SELECT DISTINCT ?scribe
		WHERE {
			{
				audit:current-trx audit:contributor ?scribe
			} UNION {
				GRAPH ?graph { $of a ?type }
				?graph audit:contributor ?scribe
			}
			OPTIONAL { $of a [calli:conservator ?conservator] }
			FILTER (!bound(?conservator))
		}
	""".

:of a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain :FindScribe.

