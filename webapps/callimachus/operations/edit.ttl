@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

:GetEditPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Editable];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom <java:java.io.InputStream>];
	msg:method "GET";
	msg:query "edit";
	msg:type "application/xhtml+xml";
	msg:transform </callimachus/layout.ttl#TransformXhtml>;
	msg:header "cache-control:no-cache";
	msg:script """
		return this.FindEditTemplate().calliConstruct(this, 'edit');
	""".

:PostEdit rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Editable];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom <java:org.apache.http.HttpResponse>];
	msg:method "POST";
	msg:query "edit";
	msg:type "message/x-response";
	msg:imports <java:org.apache.http.ProtocolVersion>;
	msg:imports <java:org.apache.http.message.BasicHttpResponse>;
	msg:script """
		var template = this.FindEditTemplate();
		template.calliEditResource(this, input);
		this.touchRevision();
		var ver = new ProtocolVersion("HTTP", 1, 1);
		var resp = new BasicHttpResponse(ver, 201, "Modified");
		resp.addHeader("Location", this + "?view");
		return resp;
	""".

:input a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :PostEdit;
	rdfs:range <java:java.io.InputStream>;
	msg:type "multipart/related;type=\"application/rdf+xml\"".

:FindEditTemplate rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Editable];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom calli:Template];
	msg:imports calli:Template;
	msg:imports <java:org.callimachusproject.annotations.edit>;
	msg:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	msg:script """
		function findAnnotatedClass(klass, ann) {
			if (klass.isAnnotationPresent(ann)) {
				return klass;
			}
			var result;
			if (klass.getSuperclass()) {
				result = findAnnotatedClass(klass.getSuperclass(), ann);
			}
			var interfaces = klass.getInterfaces();
			for (var i = interfaces.length; i--;) {
				var face = findAnnotatedClass(interfaces[i], ann);
				if (face) {
					if (!result || result.isAssignableFrom(face)) {
						result = face;
					} else if (!face.isAssignableFrom(result)) {
						throw new InternalServerError("Conflicting templates for "
							+ result.simpleName +  " and " + face.simpleName);
					}
				}
			}
			return result;
		}
		var annotated = findAnnotatedClass(this.getClass(), edit);
		if (annotated) {
			var uri = annotated.getAnnotation(edit).value();
			if (uri.length != 1)
				throw new InternalServerError("Multiple templates for " + annotated.simpleName);
			var template = this.objectConnection.getObject(Template, uri[0]);
			if (template instanceof Template)
				return template;
			throw new InternalServerError("Missing template");
		}
		throw new InternalServerError("No template");
	""".

