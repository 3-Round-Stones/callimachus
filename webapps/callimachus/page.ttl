@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

[msg:matching </page/*>] rdfs:subClassOf <WikiPage>.

<WikiPage> calli:editor </group/admin>.

<Page> rdfs:subClassOf calli:Viewable, calli:Editable, calli:Copyable, calli:Page;
	calli:icon <page.png>;
	calli:view <page.xhtml>;
	calli:edit <page-edit.xhtml>;
	calli:copy <page-copy.xhtml>;
	calli:withNamespace </page/>.

:FindWikiPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom [
		owl:intersectionOf (<WikiPage> [owl:complementOf calli:Page])]];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:method "GET", "HEAD";
	msg:expect "302-found";
	msg:imports calli:Page;
	msg:script """
		var page = this.objectConnection.getObject(this.toString() + ".xhtml");
		if (page instanceof Page)
			return page.toString() + "?view";
		return page.toString() + "?edit";
	""".

:GetPage owl:intersectionOf (</callimachus/operations/view.ttl#GetViewPage>
		[owl:onProperty msg:target; owl:allValuesFrom <Page>]);
	msg:script """
		return this.calliConstruct(this, 'view');
	""".

:PostTemplateCopy owl:intersectionOf (</callimachus/operations/copy.ttl#PostCopy>
		[owl:onProperty msg:target; owl:allValuesFrom <Page>]);
	msg:script """
		var created = proceed();
		this.objectConnection.commit();
		created.PutWikiPage(new java.net.URL(this.toString()).openStream());
		return created;
	""".

:CreateWikiPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom [
		owl:intersectionOf (<WikiPage> [owl:complementOf calli:Page])]];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:method "GET", "HEAD";
	msg:query "edit";
	msg:realm </accounts>;
	msg:type "text/html";
	msg:imports <page-edit.xhtml> ;
	msg:script """
		return page_edit_xhtml.calliConstructHTML(this);
	""".
:local a calli:LocalRealm;
	calli:domain </page/>.

:PutWikiPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom <WikiPage>];
	rdfs:subClassOf [owl:onProperty msg:objectSet; owl:allValuesFrom owl:Nothing];
	msg:method "PUT";
	msg:realm </accounts>, :local;
	msg:imports <Page>;
	msg:script """
		this.PutXhtmlDocument("application/xhtml+xml", xhtmlStream);
		this.objectConnection.addDesignation(this, Page);
	""".

:xhtmlStream a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :PutWikiPage;
	rdfs:range <java:java.io.InputStream>;
	msg:type "application/xhtml+xml".

