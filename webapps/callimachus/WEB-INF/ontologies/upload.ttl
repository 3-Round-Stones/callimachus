@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

################################
# RDF Graph
################################

calli:NamedGraph a owl:Class.

calli:put-graph-document rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:objectResponse;
		owl:allValuesFrom owl:Nothing];
	http:method "PUT";
	http:operation "calli:webapps";
	http:realm calli:nobody;
	obj:imports <java:org.openrdf.rio.RDFFormat>;
	obj:imports calli:NamedGraph;
	obj:script """
		calliWebappsDelete();
		var type = contentType;
		if (type.indexOf(';') > 0) {
			type = type.substring(0, type.indexOf(';'));
		}
		objectConnection.addDesignation(this, NamedGraph);
		objectConnection.add(body, this.toString(), RDFFormat.forMIMEType(type), [resource]);
	""".

calli:put-graph-document-type a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:put-graph-document;
	rdfs:range xsd:string;
	http:header "Content-Type";
	obj:name "contentType".

calli:put-graph-document-body a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:put-graph-document;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/rdf+xml;q=0.1", "text/turtle;q=0.1", "application/x-turtle;q=0.1";
	obj:name "body".

################################
# Text File
################################

calli:put-text-document rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:objectResponse;
		owl:allValuesFrom owl:Nothing];
	http:method "PUT";
	http:operation "calli:webapps";
	http:realm calli:nobody;
	obj:imports calli:Template;
	obj:script """
		calliWebappsDelete();
		var type = "urn:mimetype:" + contentType;
		if (type.indexOf(';') > 0) {
			type = type.substring(0, type.indexOf(';'));
		}
		objectConnection.addDesignation(this, type);
		var read;
		var cbuf = java.lang.reflect.Array.newInstance(java.lang.Character.TYPE, 1024);
		var out = openWriter();
		try {
			while ((read = body.read(cbuf)) >= 0) {
				out.write(cbuf, 0, read);
			}
		} finally {
			out.close();
		}
	""".

calli:put-text-document-type a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:put-text-document;
	rdfs:range xsd:string;
	http:header "Content-Type";
	obj:name "contentType".

calli:put-text-document-body a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:put-text-document;
	rdfs:range <java:java.io.Reader>;
	http:type "text/html;q=0.1", "text/css;q=0.1", "text/javascript;q=0.1", "text/plain;q=0.1";
	obj:name "body".

