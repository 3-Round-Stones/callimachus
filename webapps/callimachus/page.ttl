@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

[msg:matching </page/*>] rdfs:subClassOf <WikiPage>.

<WikiPage> calli:editor </group/admin>.

<Page> rdfs:subClassOf calli:Viewable, calli:Editable, calli:Copyable, calli:Page;
	calli:icon <page.png>;
	calli:edit <page-edit.xhtml>;
	calli:copy <page-copy.xhtml>;
	calli:withNamespace </page/>.

# POST /page/MainPage.xhtml?copy
:PostTemplateCopy owl:intersectionOf (</callimachus/operations/copy.ttl#PostCopy>
		[owl:onProperty msg:target; owl:allValuesFrom <Page>]);
	msg:script """
		var created = proceed();
		this.objectConnection.commit();
		created.PutWikiPage(new java.net.URL(this.toString()).openStream());
		return created;
	""".

# GET /page/MainPage
:FindWikiPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom [
		owl:intersectionOf (<WikiPage> [owl:complementOf calli:Viewable])]];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:method "GET", "HEAD";
	msg:expect "302-found";
	msg:imports calli:Viewable;
	msg:script """
		var page = this.objectConnection.getObject(this.toString() + ".xhtml");
		if (page instanceof Viewable)
			return page.toString() + "?view";
		return page.toString() + "?edit";
	""".

# GET /page/MainPage.xhtml?view
:GetPage owl:intersectionOf (</callimachus/operations/view.ttl#GetViewPage>
		[owl:onProperty msg:target; owl:allValuesFrom <Page>]);
	msg:script """
		return this.calliConstruct(this, 'view');
	""".

# GET /page/NewPage.xhtml?edit
:CreateWikiPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom [
		owl:intersectionOf (<WikiPage> [owl:complementOf calli:Viewable])]];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:method "GET", "HEAD";
	msg:query "edit";
	msg:realm </accounts>;
	msg:type "text/html";
	msg:imports <page-edit.xhtml> ;
	msg:script """
		return page_edit_xhtml.calliConstructHTML(this);
	""".

# GET /page/MainPage.xhtml
:GetPageSource rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom <Page>];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom <java:java.io.InputStream>];
	msg:method "GET";
	msg:type "application/xhtml+xml";
	msg:header "cache-control:must-revalidate";
	msg:header "cache-control:cache-range";
	msg:script "return this.openInputStream()".

:local a calli:LocalRealm;
	calli:domain </page/>.

# PUT /page/MainPage.xhtml
:PutWikiPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom <WikiPage>];
	rdfs:subClassOf [owl:onProperty msg:objectSet; owl:allValuesFrom owl:Nothing];
	msg:method "PUT";
	msg:realm </accounts>, :local;
	msg:imports <java:org.openrdf.model.vocabulary.RDFS>;
	msg:imports <java:java.net.URLDecoder>;
	msg:imports <java:org.openrdf.http.object.HTTPObjectServer>;
	msg:imports <Page>;
	msg:script """
		var con = this.objectConnection;
		var vf = con.getValueFactory();

		con.removeDesignation(this, Page);
		this.calliDeleteWebResource();

		var filename = this.resource.localName.replaceAll("(?<=[a-zA-Z_0-9])\\\\.[a-zA-Z]+$", "");
		var label = vf.createLiteral(URLDecoder.decode(filename, "UTF-8"));
		con.add(this.resource, RDFS.LABEL, label, []);

		this.objectConnection.addDesignation(this, Page);
		this.objectConnection.addDesignation(this, "http://callimachusproject.org/rdf/2009/framework#Page");

		var read;
		var buf = java.lang.reflect.Array.newInstance(java.lang.Byte.TYPE, 1024);
		var out = this.openOutputStream();
		try {
			while ((read = xhtmlStream.read(buf)) >= 0) {
				out.write(buf, 0, read);
			}
		} finally {
			out.close();
		}
		HTTPObjectServer.resetAllCache();
	""".

:xhtmlStream a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :PutWikiPage;
	rdfs:range <java:java.io.InputStream>;
	msg:type "application/xhtml+xml".

