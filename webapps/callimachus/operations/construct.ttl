@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

calli:ConstructHTML rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Template];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:type "text/html";
	msg:script """
		var reader = this.TransformXhtml(this.calliConstruct(calliObjecthtml, calliQueryhtml));
		try {
			var writer = new java.io.CharArrayWriter();
			var read;
			var cbuf = java.lang.reflect.Array.newInstance(java.lang.Character.TYPE, 1024);
			while ((read = reader.read(cbuf)) >= 0) {
				writer.write(cbuf, 0, read);
			}
			return writer.toString();
		} finally {
			reader.close();
		}
	""".

calli:objecthtml a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructHTML.

calli:queryhtml a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructHTML;
	rdfs:range xsd:string.

calli:ConstructTemplate rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom calli:Template];
	rdfs:subClassOf [owl:onProperty msg:object; owl:allValuesFrom <java:java.io.InputStream>];
	msg:type "application/xhtml+xml";
	msg:transform </callimachus/layout.ttl#TransformXhtml>;
	msg:xslt <construct.xsl>.

:element a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructTemplate;
	rdfs:range xsd:string;
	msg:query "element".

:query a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructTemplate;
	rdfs:range xsd:string;
	msg:query "query".

:xml a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructTemplate;
	rdfs:range <java:javax.xml.stream.XMLEventReader>;
	msg:type "application/rdf+xml".

