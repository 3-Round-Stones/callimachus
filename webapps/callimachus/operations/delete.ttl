@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

calli:get-delete rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Deletable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.Reader>];
	http:operation "delete";
	http:type "text/html";
	http:cache-control "no-cache";
	obj:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	obj:script """
		var template = findDeleteTemplate();
		if (template == null)
			throw new InternalServerError("Missing Delete Template");
		return template.calliConstruct('delete', this);
	""".

calli:post-delete rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Deletable];
	rdfs:subClassOf [owl:onProperty obj:objectResponse;
		owl:allValuesFrom owl:Nothing];
	http:method "DELETE";
	http:operation "delete";
	obj:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	obj:script """
		var template = findDeleteTemplate();
		if (template == null)
			throw new InternalServerError("Missing Delete Template");
		template.calliDeleteResource(this, input);
	""".

calli:post-delete-input a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:post-delete;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/rdf+xml";
	obj:name "input".

calli:find-delete-template rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Deletable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom calli:Template];
	obj:name "findDeleteTemplate";
	obj:sparql """
		SELECT DISTINCT ?template
		WHERE {
			$this a [calli:delete ?template] .
			?template a calli:Template
		}
	""".

