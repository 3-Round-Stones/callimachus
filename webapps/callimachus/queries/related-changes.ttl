@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix audit:<http://www.openrdf.org/rdf/2009/auditing#>.
@prefix :<#>.

:menu-related-changes rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom obj:TupleResult];
	http:operation "related-changes";
	http:type "application/sparql-results+xml";
	http:cache-control "no-store";
	http:transform :related-changes-xsl;
	obj:sparql """
		SELECT REDUCED ?label ?comment ?icon ?url ?revision ?modified ?user ?name
		WHERE {
			$this ?rel ?url .
			{
				GRAPH ?revision { ?url ?p ?o FILTER (?p != audit:contained) }
			} UNION {
				?revision audit:contained [rdf:subject ?url]
			}
			?revision audit:committedOn ?modified; http:authorized ?user
			FILTER (?url != ?revision)
			FILTER (?url != ?user)
			FILTER (?url != $this)
			FILTER (isIRI(?url))
			OPTIONAL { ?url a [calli:icon ?icon] }
			OPTIONAL { ?url rdfs:label ?label }
			OPTIONAL { ?url rdfs:comment ?comment }
			OPTIONAL { ?user rdfs:label ?name }
		}
		ORDER BY desc(?modified) ?url
		LIMIT 50
	""".

:related-changes-xsl rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xml";
	http:transform <../layout.ttl#template-xsl>;
	obj:xslt <related-changes.xsl>.

:related-changes-xsl-input a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :related-changes-xsl;
	rdfs:range <java:java.io.InputStream>.

