	""".

# anybody with credentials can login and is welcome
:login-authorize owl:equivalentClass :AuthorizeCredential;
	obj:sparql """
		ASK {
			$object calli:authenticates [calli:member $credential]
			FILTER ($method = "GET" || $method = "HEAD")
			FILTER ($object = </accounts>)
			FILTER ($query = "login" || $query = "welcome")
		}
	""".

# transcations are authorized by the object they modified
# TODO change to use obj:script and call AuthorizeCredential with each object in transaction
:transaction-view-authorize owl:equivalentClass :AuthorizeCredential;
	obj:sparql """
		ASK {
			$object a audit:Transaction
			{
				GRAPH $object { ?subj ?pred ?obj }
			} UNION {
				GRAPH $object { [rdf:subject ?subj] }
			} UNION {
				$object audit:contained [rdf:subject ?subj]
			}
			{
				?subj calli:reviewer $credential
			} UNION {
				?subj calli:maintainer $credential
			} UNION {
				?subj calli:reviewer [calli:member $credential]
			} UNION {
				?subj calli:maintainer [calli:member $credential]
			}
			FILTER ($method = "GET" || $method = "HEAD" || $method = "POST" && $query = "discussion")
			FILTER ($query = "view" || $query = "describe" || $query = "discussion" || !bound($query))
		}
	""".

# any authenticated user can view any other user
:user-view-authorize owl:equivalentClass :AuthorizeCredential;
	obj:sparql """
		ASK {
			$object a </accounts/user/User>
			FILTER ($method = "GET" || $method = "HEAD")
			FILTER ($query = "view" || !bound($query))
		}
	""".

# Group curators can create users
:user-create-authorize owl:equivalentClass :AuthorizeCredential;
	obj:sparql """
		ASK {
			$object a </accounts/group/Group>
			{
				$object calli:scribe $credential
			} UNION {
				$object calli:curator $credential
			} UNION {
				$object calli:scribe [calli:member $credential]
			} UNION {
				$object calli:curator [calli:member $credential]
			}
			FILTER ($query = "user-create")
		}
	""".

