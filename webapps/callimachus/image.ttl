@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix foaf:<http://xmlns.com/foaf/0.1/>.
@prefix callimachus:<.>.
@prefix :<#>.

</image> calli:maintainer </group/admin>.

<Image> rdfs:subClassOf foaf:Image, calli:Viewable, calli:Editable ;
	calli:view <image.xhtml> ; calli:edit <image-edit.xhtml> .

:PostImage rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target; owl:hasValue </image> ];
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse; owl:allValuesFrom xsd:string];
	http:method "POST" ;
	http:expect "303-see-also" ;
	http:type "text/uri-list";
	http:realm </accounts> ;
	obj:imports <java:java.net.URLEncoder>;
	obj:imports <java:javax.mail.util.ByteArrayDataSource>;
	obj:imports <java:javax.mail.internet.MimeMultipart>;
	obj:imports <java:org.openrdf.http.object.exceptions.BadRequest>;
	obj:imports <java:org.openrdf.http.object.exceptions.Conflict>;
	obj:imports <Image> ;
	obj:script """
		//# image and caption input (see below)
		var ds = new ByteArrayDataSource(input, "multipart/form-data") ;
		var multipart = new MimeMultipart(ds);
		var img = multipart.getBodyPart(0) ;
		var caption = multipart.getBodyPart(1).content ;
		if (caption=="") throw new BadRequest("missing caption") ;

		//# image resource
		var local = ("" + URLEncoder.encode(img.fileName, "UTF-8")).replace(/%20/g, "+") ;
		var uri = this.toUri().resolve("/image/") + local ;
		var obj = this.objectConnection.getObject(uri) ;
		if (obj instanceof Image) throw new Conflict("Image Exists: "+uri) ;

		//# designate as <Image> and the relevant mimetype
		obj = this.objectConnection.addDesignation(obj, Image) ;
		var type = img.contentType;
		if (type.indexOf(';') > 0) {
			type = type.substring(0, type.indexOf(';'));
		}
		if (!type.startsWith("image/")) throw new BadRequest(type) ;
		obj = this.objectConnection.addDesignation(obj, "urn:mimetype:" + type) ;

		//# add the image caption
		obj.rdfsLabels.add(caption);

		this.objectConnection.commit();

		//# load image data
		var file = img.getInputStream();
		var out = obj.PutImage(file) ;

		return obj + "?view";
	""".

:input a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain :PostImage ;
	rdfs:range <java:java.io.InputStream> ;
	http:type "multipart/form-data".

:local a calli:LocalRealm;
	calli:domain </image/>.

:PutImage rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target; owl:allValuesFrom <Image> ];
	rdfs:subClassOf [owl:onProperty obj:objectResponse; owl:allValuesFrom owl:Nothing];
	http:method "PUT" ;
	http:realm :local ;
	obj:script """
		var out = this.openOutputStream() ;
		var buf = java.lang.reflect.Array.newInstance(java.lang.Byte.TYPE, 1024);
		var read;
		try {
			while ((read = imageStream.read(buf)) >= 0) {
				out.write(buf, 0, read);
			}
		} finally {
			out.close();
		}
	""".

:imageStream a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain :PutImage ;
	rdfs:range <java:java.io.InputStream> ;
	http:type "application/octet-stream" .

