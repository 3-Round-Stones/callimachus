#
# Sesame configuration for a callimachus repository
#
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix rep: <http://www.openrdf.org/config/repository#>.
@prefix sr: <http://www.openrdf.org/config/repository/sail#>.
@prefix sail: <http://www.openrdf.org/config/sail#>.
@prefix ms: <http://www.openrdf.org/config/sail/memory#>.
@prefix audit: <http://www.openrdf.org/config/sail/auditing#>.

[] a rep:Repository ;
   rep:repositoryID "callimachus" ;
   rdfs:label "Callimachus Temporary Store" ;
   rep:repositoryImpl [
      rep:repositoryType "openrdf:OptimisticRepository" ;
      sr:sailImpl [
         sail:sailType "openrdf:AuditingSail" ;
         sail:delegate [
            sail:sailType "openrdf:MemoryStore" ;
            ms:persist true ;
            ms:syncDelay -1 ;
         ]
      ]
   ].
