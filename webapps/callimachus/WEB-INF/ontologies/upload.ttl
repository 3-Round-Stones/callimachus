calli:put-template-body a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:put-template;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/xml;q=0.1";
	obj:name "body".

calli:delete-template rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
