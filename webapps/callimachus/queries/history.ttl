@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix audit:<http://www.openrdf.org/rdf/2009/auditing#>.
@prefix :<#>.

:history rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom obj:TupleResult];
	http:operation "history";
	http:type "application/sparql-results+xml";
	http:cache-control "no-store";
	http:transform :history-xsl;
	obj:sparql """
		SELECT REDUCED ?label ?note ?revision ?modified ?user ?name
		WHERE {
			{
				GRAPH ?revision { $this ?p ?o FILTER (?p != audit:contained) }
			} UNION {
				?revision audit:contained [rdf:subject $this]
			}
			?revision audit:committedOn ?modified; http:authorized ?user
			FILTER (?user != $this)
			OPTIONAL { ?user rdfs:label ?name }
			OPTIONAL { $this rdfs:label ?label }
			OPTIONAL {
				{
					GRAPH ?revision { $this skos:changeNote ?note }
				} UNION {
					?revision audit:contained [rdf:subject $this; rdf:predicate skos:changeNote; rdf:object ?note]
				}
			}
		}
		ORDER BY desc(?modified)
		LIMIT 50
	""".

:history-xsl rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xml";
	http:transform <../layout.ttl#template-xsl>;
	obj:xslt <history.xsl>.

:history-xsl-input a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :history-xsl;
	rdfs:range <java:java.io.InputStream>.

