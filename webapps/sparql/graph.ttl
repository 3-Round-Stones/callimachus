@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

</graph> calli:maintainer </group/admin>.

:upload-rdf-graph rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target; owl:hasValue </graph>];
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse;
		owl:allValuesFrom xsd:string];
	http:method "POST";
	http:type "text/html";
	http:realm </accounts>;
	obj:imports calli:NamedGraph;
	obj:imports <java:java.net.URLEncoder>;
	obj:imports <java:org.openrdf.rio.RDFFormat>;
	obj:imports <java:javax.mail.util.ByteArrayDataSource>;
	obj:imports <java:javax.mail.internet.MimeMultipart>;
	obj:imports </sparql/uploaded.xhtml>;
	obj:script """
		var ds = new ByteArrayDataSource(input, "multipart/form-data");
		var part = new MimeMultipart(ds).getBodyPart(0);
		var fileName = part.fileName;
		var local = ("" + URLEncoder.encode(fileName, "UTF-8")).replace(/%20/g, "+");
		var uri = toUri().resolve("/graph/") + local;
		var format = RDFFormat.forFileName(fileName, RDFFormat.RDFXML);
		var vf = objectConnection.getValueFactory();
		var file = part.getInputStream();
		var obj = objectConnection.getObject(uri);
		objectConnection.clear([vf.createURI(uri)]);
		if (!(obj instanceof NamedGraph)) {
			objectConnection.addDesignation(obj, NamedGraph);
		}
		objectConnection.add(file, uri, format, [vf.createURI(uri)]);
		return uploaded_xhtml.calliConstructHTML(obj);
	""".

:upload-rdf-graph-input a owl:DatatypeProperty, owl:FunctionalProperty;
	rdfs:domain :upload-rdf-graph;
	rdfs:range <java:java.io.InputStream>;
	http:type "multipart/form-data";
	obj:name "input".

