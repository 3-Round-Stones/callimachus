@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix audit:<http://www.openrdf.org/rdf/2009/auditing#>.
@prefix :<#>.

:menu-recent-changes rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:hasValue <../changes>];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom obj:TupleResult];
	http:method "GET";
	http:type "application/sparql-results+xml";
	http:cache-control "no-store";
	http:transform :recent-changes-xsl;
	obj:sparql """
		SELECT REDUCED ?label ?note ?icon ?url ?revision ?modified ?user ?name
		WHERE {
			?revision audit:committedOn ?modified
			OPTIONAL { ?revision http:authorized ?user
				OPTIONAL { ?user skos:prefLabel ?name }
				OPTIONAL { ?user rdfs:label ?name }
			}
			{
				GRAPH ?revision { ?url ?p ?o FILTER (?p != audit:contained) }
			} UNION {
				?revision audit:contained [rdf:subject ?url]
			}
			FILTER (?url != ?revision)
			FILTER (?url != ?user)
			FILTER (isIRI(?url))
			OPTIONAL { ?url a [calli:icon ?icon] }
			OPTIONAL { ?url skos:prefLabel ?label }
			OPTIONAL { ?url rdfs:label ?label }
			OPTIONAL {
				{
					GRAPH ?revision { ?url skos:changeNote ?note }
				} UNION {
					?revision audit:contained [rdf:subject ?url; rdf:predicate skos:changeNote; rdf:object ?note]
				}
			}
		}
		ORDER BY desc(?modified) ?url
		LIMIT 50
	""".

:recent-changes-xsl rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xml";
	http:transform <../layout.ttl#template-xsl>;
	obj:xslt <recent-changes.xsl>.

:recent-changes-xsl-input a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :recent-changes-xsl;
	rdfs:range <java:java.io.InputStream>.

