@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

:InitializeMainArticle owl:equivalentClass calli:Started;
	msg:imports calli:Article;
	msg:script """
		var con = this.objectConnection;
		var vf = con.valueFactory;
		var calli = "http://callimachusproject.org/rdf/2009/framework#";
		var describedBy = vf.createURI(calli, "describedBy");

		var pages = this.FindDefaultMainArticle().iterator();
		while (pages.hasNext()) {
			var url = pages.next().toString();
			var page = url.replace(/callimachus.pages.main-article.docbook$/, 'main-article.docbook');
			var created = this.objectConnection.getObject(page);
			if (!(created instanceof Article)) {
				var atype = url.replace(/pages.main-article.docbook$/, 'Article');
				var home = url.replace(/callimachus.pages.main-article.docbook$/, '');
				var folder = con.getObject(home);
				created = con.addDesignation(created, atype);
				created = con.addDesignation(created, Article);
				created.rdfsLabel.add("main article");
				created.calliReader.addAll(folder.calliReader);
				created.calliEditor.addAll(folder.calliEditor);
				created.calliAdministrator.addAll(folder.calliAdministrator);
				folder.calliHasComponent.add(created);
				con.add(folder.resource, describedBy, vf.createURI(created.toString() + '?view'), []);
				this.objectConnection.commit();
				java.lang.System.out.println("Uploading " + page);
				created.UploadArticle(new java.net.URL(url).openStream());
			}
		}
		proceed();
	""".

:FindDefaultMainArticle rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:hasValue calli:boot];
	msg:sparql """
		SELECT ?main
		WHERE {
			?main a <urn:mimetype:application/docbook+xml>; rdfs:label "main article".
			FILTER (regex(str(?main), "^[a-z]+://[^/]+/callimachus/pages/main-article.docbook$"))
		}
	""".
