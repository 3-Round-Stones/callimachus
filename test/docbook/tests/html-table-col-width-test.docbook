<article 
    xmlns       ="http://docbook.org/ns/docbook" 
    xmlns:xl    ="http://www.w3.org/1999/xlink"
    version="5.0">
    <title>A formal (captioned) HTML table in a document</title>
    <table summary="table summary" border="1" cellpadding="10" cellspacing="10">
        <caption>Sample HTML Table</caption>
        <col width="75%" />
        <col width="25%" />
        <thead>
            <tr>
                <th>
                    <para>Head 1</para>
                </th>
                <th>Head 2</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <para>Body 1</para>
                </td>
                <td>Body 2</td>
            </tr>
        </tbody>
    </table>
</article>
