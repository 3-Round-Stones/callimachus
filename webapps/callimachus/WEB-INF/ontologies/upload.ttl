################################
# DELETE
################################

calli:webapps-delete rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:objectResponse;
		owl:allValuesFrom owl:Nothing];
	http:method "DELETE";
	http:operation "calli:webapps";
	http:realm calli:nobody;
	obj:imports <java:org.openrdf.model.BNode>;
	obj:imports <java:org.openrdf.model.URI>;
	obj:script """
		function removeTriples(subject) {
			var stmts = objectConnection.getStatements(subject, null, null, []);
			try {
				while (stmts.hasNext()) {
					var st = stmts.next();
					if (st.object instanceof BNode) {
						removeTriples(st.object);
					} else if (st.object instanceof URI
							&& st.object.stringValue().startsWith(subject.stringValue())
							&& st.object.charAt(subject.stringValue().length()) == "#") {
						removeTriples(st.object);
					}
					objectConnection.remove(st, []);
				}
			} finally {
				stmts.close();
			}
		}
		objectConnection.clear([resource]); //# clear graph
		removeTriples(resource); //# follow blank and hash references
		this['delete'](); //# remove document
	""".

