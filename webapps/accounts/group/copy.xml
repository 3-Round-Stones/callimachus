<?xml-stylesheet type="text/xsl" href="../../layout/template.xsl"?>
<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
	xmlns:calli="http://callimachusproject.org/rdf/2009/framework#"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema#">
	<head>
		<title property="rdfs:label"/>
	</head>
	<body>
		<ul class="aside">
			<li>The group name cannot be changed once created</li>
			<li>Use Wiki text to describe the group</li>
		</ul>
		<form action="" about="">
			<div rel="rdf:type" resource="/accounts/group/Group" />
			<table>
				<tbody>
					<tr>
						<th>
							<label for="label-input">Name:</label>
						</th>
						<td data-cardinality="1">
							<input id="label-input" property="rdfs:label" type="text" class="auto-expand required"
								onchange="$(form).attr('about', encodeURI(value).replace('%20','+'))" />
						</td>
					</tr>
					<tr>
						<th>
							<label for="comment-textarea">Description:</label>
						</th>
						<td data-cardinality="1">
							<textarea id="comment-textarea" class="auto-expand"
								property="rdfs:comment"></textarea>
						</td>
					</tr>
				</tbody>
			</table>
			<button type="submit">Create</button>
		</form>
	</body>
</html>
