@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix audit:<http://www.openrdf.org/rdf/2009/auditing#>.
@prefix :<#>.

:GetDiscussion rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom obj:TupleResult];
	http:method "GET";
	http:operation "discussion";
	http:type "application/sparql-results+xml";
	http:transform :TransformDiscussion;
	obj:sparql """
		SELECT REDUCED ?label ?note ?revision ?modified ?user ?name
		WHERE {
			{
				$this skos:prefLabel ?label
				OPTIONAL { $this rdfs:label ?label }
			} UNION {
				GRAPH ?revision { $this skos:editorialNote ?note }
				?revision audit:committedOn ?modified
				OPTIONAL { ?revision http:authorized ?user
					OPTIONAL { ?user skos:prefLabel ?name }
					OPTIONAL { ?user rdfs:label ?name }
				}
			}
		}
		ORDER BY ?modified
	""".

:PostDiscussion rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse;
		owl:allValuesFrom xsd:string];
	http:method "POST";
	http:operation "discussion";
	http:expect "303-see-other";
	obj:imports skos:editorialNote;
	obj:script """
		var vf = this.objectConnection.valueFactory;
		var lit = vf.createLiteral(form.get('note')[0]);
		this.objectConnection.add(this.resource, editorialNote.resource, lit, []);
		return this.resource + "?discussion";
	""".

:form a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:PostDiscussion;
	rdfs:range <java:java.util.Map>;
	http:type "application/x-www-form-urlencoded";.

:TransformDiscussion rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xml";
	http:transform <../layout.ttl#TransformLayout>;
	obj:xslt <discussion.xhtml>.

:inputStream a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :TransformDiscussion;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/sparql-results+xml".

