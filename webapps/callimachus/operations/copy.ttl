@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

calli:get-copy rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.Reader>];
	http:operation "copy";
	http:type "text/html";
	http:cache-control "no-cache";
	obj:script """
		return findCopyTemplate().calliConstruct(this, 'copy');
	""".

calli:post-copy rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:objectResponse;
		owl:maxCardinality "1"^^xsd:nonNegativeInteger];
	http:method "POST";
	http:operation "copy";
	http:expect "201-created";
	obj:script """
		var template = findCopyTemplate();
		var copy = template.calliCopyResource(this, input, findCopyNamespaces());
		if (calliCurators) {
			copy.calliMaintainers.addAll(calliCurators);
			copy.calliCurators.addAll(calliCurators);
		} else {
			copy.calliMaintainers.addAll(findScribe(copy));
		}
		return copy;
	""".

calli:post-copy-input a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:post-copy;
	rdfs:range <java:java.io.InputStream>;
	http:type "application/rdf+xml";
	obj:name "input".

calli:find-copy-template rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom calli:Template];
	obj:name "findCopyTemplate";
	obj:imports calli:Template;
	obj:imports <java:org.callimachusproject.annotations.copy>;
	obj:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	obj:script """
		function findAnnotatedClass(klass, ann) {
			if (klass.isAnnotationPresent(ann)) {
				return klass;
			}
			var result;
			if (klass.getSuperclass()) {
				result = findAnnotatedClass(klass.getSuperclass(), ann);
			}
			var interfaces = klass.getInterfaces();
			for (var i = interfaces.length; i--;) {
				var face = findAnnotatedClass(interfaces[i], ann);
				if (face) {
					if (result && !result.isAssignableFrom(face)) {
						throw new InternalServerError("Conflicting templates for "
							+ result.simpleName +  " and " + face.simpleName);
					} else {
						result = face;
					}
				}
			}
			return result;
		}
		var annotated = findAnnotatedClass(this.getClass(), copy);
		if (annotated) {
			var uri = annotated.getAnnotation(copy).value();
			if (uri.length != 1)
				throw new InternalServerError("Multiple templates for " + annotated.simpleName);
			var template = objectConnection.getObject(Template, uri[0]);
			if (template instanceof Template)
				return template;
			throw new InternalServerError("Missing template");
		}
		throw new InternalServerError("No template");
	""".

calli:find-copy-namespace rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	obj:name "findCopyNamespaces";
	obj:sparql """
		SELECT DISTINCT ?namespace
		WHERE { $this a [calli:withNamespace ?namespace] }
	""".

# find the user that created $of if it does not have a conservator
calli:find-scribe rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	obj:name "findScribe";
	obj:sparql """
		SELECT DISTINCT ?scribe
		WHERE {
			{
				audit:current-trx http:authorized ?scribe
			} UNION {
				GRAPH ?graph { $of a ?type }
				?graph http:authorized ?scribe
			}
			OPTIONAL { $of a [calli:conservator ?conservator] }
			FILTER (!bound(?conservator))
		}
	""".

calli:find-scribe-of a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:find-scribe;
	obj:name "of".

