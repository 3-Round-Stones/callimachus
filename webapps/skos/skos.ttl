@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

</callimachus/menu>
	calli:item [calli:position 4; rdfs:label "Concept schemes"; calli:link <scheme-list.xhtml?construct>].

skos:ConceptScheme rdfs:subClassOf calli:Viewable, calli:Editable;
	calli:icon <scheme.png>;
	calli:view <scheme.xhtml>;
	calli:edit <scheme-edit.xhtml>.

<scheme_template> a <ConceptSchemeTemplate>;
	calli:curator </group/admin>.

<ConceptSchemeTemplate> rdfs:subClassOf calli:Copyable;
	calli:copy <scheme-create.xhtml>;
	calli:withNamespace </scheme/>.

:GetConcepts rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target; owl:allValuesFrom skos:ConceptScheme];
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse; owl:allValuesFrom xsd:string];
	http:method "GET";
	http:operation "viewconcepts";
	http:type "text/html";
	http:cache-control "no-store";
	obj:imports <concept-list.xhtml>;
	obj:script "return concept_list_xhtml.calliConstructHTML(this)".

skos:Concept rdfs:subClassOf calli:Viewable, calli:Editable;
	calli:icon <concept.png>;
	calli:view <concept.xhtml>;
	calli:edit <concept-edit.xhtml>.

<concept_template> a <ConceptTemplate>;
	calli:curator </group/admin>.

<ConceptTemplate> rdfs:subClassOf calli:Copyable;
	calli:copy <concept-create.xhtml>;
	calli:withNamespace </concept/>.

:TouchRelated owl:intersectionOf (</callimachus/operations/edit.ttl#PostEdit>
	[owl:onProperty obj:target; owl:allValuesFrom skos:Concept]);
	obj:script """
		var ret = proceed();
		var iter = this.skosNarrowers.iterator();
		while (iter.hasNext()) {
			iter.next().touchRevision();
		}
		iter = this.skosRelated.iterator();
		while (iter.hasNext()) {
			iter.next().touchRevision();
		}
		return ret;
	""".

