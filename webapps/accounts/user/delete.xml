<?xml-stylesheet type="text/xsl" href="../../layout/template.xsl"?>
<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
	xmlns:calli="http://callimachusproject.org/rdf/2009/framework#">
	<head>
		<title property="rdfs:label"/>
		<script><![CDATA[
		function() {
			$('form[about]').bind('deleteSuccess.calli', function(e) {
				document.getElementById("success").style.display = "block"
			});
		}
		// ]]>
		</script>
	</head>
	<body>
		<form action="" about="">
			<h1>Are you sure you want to delete this user?</h1>
			<div rel="rdf:type" resource="/accounts/user/User" />
			<h1 property="rdfs:label" />
			<div property="calli:name" />
			<div property="calli:email" />
			<p property="rdfs:comment" />
			<div rev="calli:member" resource="?group">
				<span property="rdfs:label" />
			</div>
			<div rel="calli:reviewer" resource="?reviewer" />
			<div rel="calli:scribe" resource="?scribe" />
			<div rel="calli:curator" resource="?curator" />
			<div rel="calli:maintainer" resource="?maintainer" />
			<div rev="calli:reviewer" resource="?reviews" />
			<div rev="calli:scribe" resource="?scribes" />
			<div rev="calli:curator" resource="?curates" />
			<div rev="calli:maintainer" resource="?maintains" />
			<button type="button" onclick="location.replace('?view')">No, Cancel</button>
			<button type="submit">Yes, Delete</button>
		</form>
		<p id="success" style="display:none">User has been deleted.</p>
	</body>
</html>
