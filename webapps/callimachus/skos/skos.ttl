@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

<ConceptScheme> rdfs:subClassOf skos:ConceptScheme, calli:Viewable, calli:Editable;
	calli:icon <scheme.png>;
	calli:view <scheme.xhtml>;
	calli:edit <scheme-edit.xhtml>.

<scheme_template> a <ConceptSchemeTemplate>;
	calli:curator </group/admin>.

<ConceptSchemeTemplate> rdfs:subClassOf calli:Copyable;
	calli:copy <scheme-create.xhtml>;
	calli:withNamespace </scheme/>.

:GetConcepts rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:allValuesFrom <ConceptScheme>];
	rdfs:subClassOf [owl:onProperty msg:literal; owl:allValuesFrom xsd:string];
	msg:method "GET";
	msg:query "viewconcepts";
	msg:type "text/html";
	msg:header "cache-control:no-store";
	msg:imports <concept-list.xhtml>;
	msg:script "return concept_list_xhtml.calliConstructHTML(this)".

<Concept> rdfs:subClassOf skos:Concept, calli:Viewable, calli:Editable;
	calli:icon <concept.png>;
	calli:view <concept.xhtml>;
	calli:edit <concept-edit.xhtml>.

<concept_template> a <ConceptTemplate>;
	calli:curator </group/admin>.

<ConceptTemplate> rdfs:subClassOf calli:Copyable;
	calli:copy <concept-create.xhtml>;
	calli:withNamespace </concept/>.

