@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix audit:<http://www.openrdf.org/rdf/2009/auditing#>.
@prefix :<#>.

:GetWhatLinksHere rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom obj:TupleResult];
	http:method "GET";
	http:operation "whatlinkshere";
	http:type "application/sparql-results+xml";
	http:cache-control "no-store";
	http:transform :TransformWhatLinksHere;
	obj:sparql """
		SELECT DISTINCT ?label ?comment ?icon ?url ?modified
		WHERE {
			{ ?url ?rel $this }
			UNION { ?bnode ?rel $this FILTER (!isIRI(?bnode))
				OPTIONAL { ?url ?rel2 ?bnode } }
			FILTER (isIRI(?url))
			FILTER (?rel != http:authorized)
			OPTIONAL { ?url a [calli:icon ?icon] }
			OPTIONAL { ?url skos:prefLabel ?label }
			OPTIONAL { ?url rdfs:label ?label }
			OPTIONAL { ?url rdfs:comment ?comment }
			OPTIONAL { ?url audit:revision ?revision
				OPTIONAL { ?revision audit:committedOn ?modified }
			}
		}
		ORDER BY ?label ?url ?icon
		LIMIT 100
	""".

:TransformWhatLinksHere rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xml";
	http:transform <../layout.ttl#TransformLayout>;
	obj:xslt <what-links-here.xsl>.

:inputStream a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain :TransformWhatLinksHere;
	rdfs:range <java:java.io.InputStream>.

