@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

calli:ConstructHTML rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Template];
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse;
		owl:allValuesFrom xsd:string];
	http:type "text/html";
	obj:script """
		var reader = xhtml_to_html_xsl(calliConstruct(object));
		try {
			var writer = new java.io.CharArrayWriter();
			var read;
			var cbuf = java.lang.reflect.Array.newInstance(java.lang.Character.TYPE, 1024);
			while ((read = reader.read(cbuf)) >= 0) {
				writer.write(cbuf, 0, read);
			}
			return writer.toString();
		} finally {
			reader.close();
		}
	""".

calli:ConstructHTML-object a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructHTML;
	obj:name "object".

calli:ConstructTemplate rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Template];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:type "application/xhtml+xml";
	http:transform </callimachus/layout.ttl#xhtml-to-html-xsl>;
	obj:xslt <construct.xsl>.

calli:construct-template-arg1 a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructTemplate;
	rdfs:range xsd:string;
	http:parameter "element";
	obj:name "element".

calli:construct-template-arg2 a owl:DatatypeProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructTemplate;
	rdfs:range xsd:string;
	http:parameter "query";
	obj:name "query".

calli:construct-template-arg3 a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain calli:ConstructTemplate;
	rdfs:range <java:javax.xml.stream.XMLEventReader>;
	http:type "application/rdf+xml".

