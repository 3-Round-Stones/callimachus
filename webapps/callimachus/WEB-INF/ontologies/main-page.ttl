@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix msg:<http://www.openrdf.org/rdf/2011/messaging#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.
@prefix :<#>.

:InitializeMainPage owl:equivalentClass calli:Started;
	msg:imports calli:Page;
	msg:script """
		var pages = this.FindDefaultMainPage().iterator();
		while (pages.hasNext()) {
			var url = pages.next().toString();
			var page = url.replace(/callimachus.main-page.xhtml$/, 'page/main-page.xhtml');
			var created = this.objectConnection.getObject(page);
			if (!(created instanceof Page)) {
				var ptype = url.replace(/main-page.xhtml$/, 'Page');
				var home = url.replace(/callimachus.main-page.xhtml$/, '');
				var folder = this.objectConnection.getObject(home);
				created = this.objectConnection.addDesignation(created, ptype);
				created.calliReaders.addAll(folder.calliReaders);
				created.calliEditors.addAll(folder.calliEditors);
				created.calliAdministrators.addAll(folder.calliAdministrators);
				this.objectConnection.commit();
				java.lang.System.out.println("Uploading " + page);
				created.UploadPage(new java.net.URL(url).openStream());
			}
		}
	""".

:FindDefaultMainPage rdfs:subClassOf msg:Message;
	rdfs:subClassOf [owl:onProperty msg:target; owl:hasValue calli:boot];
	rdfs:subClassOf [owl:onProperty msg:objectSet; owl:allValuesFrom calli:Page];
	msg:sparql """
		SELECT ?main
		WHERE {
			?main a calli:Page; rdfs:label "main page".
			FILTER (regex(str(?main), "^[a-z]+://[^/]+/callimachus/main-page.xhtml$"))
		}
	""".
