@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

calli:authorize-credential rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:DigestRealm];
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse;
		owl:cardinality "1"^^xsd:nonNegativeInteger];
	rdfs:subClassOf [owl:onProperty obj:functionalLiteralResponse;
		owl:allValuesFrom xsd:boolean];
	obj:name "authorizeCredential".

calli:authorize-credential-arg1 a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:authorize-credential;
	obj:name "credential".

calli:authorize-credential-arg2 a owl:DatatypeProperty, owl:FunctionalProperty;
	rdfs:domain calli:authorize-credential;
	rdfs:range xsd:string;
	obj:name "method".

calli:authorize-credential-arg3 a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:authorize-credential;
	obj:name "subject".

calli:authorize-credential-arg4 a owl:DatatypeProperty, owl:FunctionalProperty;
	rdfs:domain calli:authorize-credential;
	rdfs:range xsd:string;
	obj:name "qs".

# Users can view, review, edit, copy, delete, or any other operations on their user resource
calli:authorize-self owl:equivalentClass calli:authorize-credential;
	obj:groovy "return msg.subject == msg.credential || msg.functionalLiteralResponse".

calli:authorize-maintainer owl:equivalentClass calli:authorize-credential;
	obj:sparql """
		ASK {
			{
				$subject calli:reviewer $credential
				FILTER ($method = "GET" || $method = "HEAD")
				FILTER ($qs = "view" || $qs = "review" || !bound($qs))
			} UNION {
				$subject calli:scribe $credential
				FILTER ($qs = "copy")
			} UNION {
				$subject calli:curator $credential
				FILTER ($qs = "copy")
			} UNION {
				$subject a [calli:conservator $credential]
				FILTER ($qs = "view" || $qs = "review" || $qs = "edit" || !bound($qs))
			} UNION {
				$subject calli:maintainer $credential
			}
		}
	""".

calli:authorize-member owl:equivalentClass calli:authorize-credential;
	obj:sparql """
		ASK {
			?group calli:member $credential
			{
				$subject calli:reviewer ?group
				FILTER ($method = "GET" || $method = "HEAD")
				FILTER ($qs = "view" || $qs = "review" || !bound($qs))
			} UNION {
				$subject calli:scribe ?group
				FILTER ($qs = "copy")
			} UNION {
				$subject calli:curator ?group
				FILTER ($qs = "copy")
			} UNION {
				$subject a [calli:conservator ?group]
				FILTER ($qs = "view" || $qs = "review" || $qs = "edit" || !bound($qs))
			} UNION {
				$subject calli:maintainer ?group
			}
		}
	""".

