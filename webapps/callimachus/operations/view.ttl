@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

calli:get-view rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Viewable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.Reader>];
	http:rel "alternate";
	http:operation "view";
	http:type "text/html";
	obj:imports <java:org.openrdf.http.object.exceptions.InternalServerError>;
	obj:groovy """
		def template = findViewTemplate()
		if (template == null)
			throw new InternalServerError("Missing View Template")
		return template.calliConstruct('view', this)
	""".

calli:find-view-template rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Viewable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom calli:Template];
	obj:name "findViewTemplate";
	obj:sparql """
		SELECT DISTINCT ?template
		WHERE {
			$this a [calli:view ?template] .
			?template a calli:Template
		}
	""".

