@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

</sparql> a calli:SPARQLService.

calli:evaluate-form rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:SPARQLService];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:org.apache.http.HttpResponse>];
	http:method "POST";
	http:type "message/x-response";
	obj:groovy """
		if (msg.map == null || !msg.map.containsKey("query"))
			throw new org.openrdf.http.object.exceptions.BadRequest("Missing query");
		return evaluateSPARQL(msg.map.get("query")[0].getBytes("UTF-8"))
	""".

calli:evaluate-form-map a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:evaluate-form;
	rdfs:range <java:java.util.Map>;
	http:type "application/x-www-form-urlencoded";
	obj:name "map".

calli:evaluate-get rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:SPARQLService];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:org.apache.http.HttpResponse>];
	http:method "GET";
	http:type "message/x-response";
	http:cache-control "must-reevaluate";
	obj:groovy """
		if (msg.query == null )
			throw new org.openrdf.http.object.exceptions.BadRequest("Missing query");
		return evaluateSPARQL(msg.query.getBytes("UTF-8"))
	""".

calli:evaluate-get-map a owl:ObjectProperty, owl:FunctionalProperty;
	rdfs:domain calli:evaluate-get;
	rdfs:range xsd:string;
	http:parameter "query";
	obj:name "query".